<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ItemCariAnggotaTabugan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView383"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="bang Haji"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView379"
                app:layout_constraintStart_toEndOf="@+id/textView379"
                app:layout_constraintTop_toTopOf="@+id/textView379"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView379"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Nama :"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView382"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Alamat :"
                app:layout_constraintStart_toStartOf="@+id/textView379"
                app:layout_constraintTop_toBottomOf="@+id/textView379" />

            <TextView
                android:id="@+id/textView380"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Sidodadi"
                app:layout_constraintBottom_toBottomOf="@+id/textView382"
                app:layout_constraintStart_toEndOf="@+id/textView382"
                app:layout_constraintTop_toBottomOf="@+id/textView379" />

            <TextView
                android:id="@+id/textView381"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:text="No Telp :"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView382"
                app:layout_constraintTop_toBottomOf="@+id/textView382" />

            <TextView
                android:id="@+id/textView386"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="123456789"
                app:layout_constraintBottom_toBottomOf="@+id/textView381"
                app:layout_constraintStart_toEndOf="@+id/textView381"
                app:layout_constraintTop_toTopOf="@+id/textView381" />

            <TextView
                android:id="@+id/textView389"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pilih"
                android:textColor="#00FF0A"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView121"
                app:layout_constraintEnd_toStartOf="@+id/imageView121"
                app:layout_constraintTop_toTopOf="@+id/imageView121" />

            <ImageView
                android:id="@+id/imageView121"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>